label-song-ellipsis = true

icon-prev = < 
icon-seekb = <<
icon-stop = stop
icon-pause = pause
icon-play = play
icon-next = >
icon-seekf = >>

icon-random = S
icon-repeat = R

toggle-on-foreground = #e60053
toggle-off-foreground = #66


[module/cpu]
format-label = internal/cpu

format = <label>

ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █
ramp-coreload-underline = ${colors.white}

type = internal/cpu
interval = 2
label = %{F${colors.white} CPU  %percentage%% %{F-}
label-underline = ${colors.white}
padding= 2


[module/memory]
type = internal/memory
interval = 2

label = %{F${colors.white} RAM %percentage_used%% %{F-}
